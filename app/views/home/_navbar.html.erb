<%= navbar do %>
    <%= navbar_header brand: t('application.name'), brand_link: root_path %>
    <%= navbar_collapse do %>
        <%= navbar_group do %>
            <%= navbar_item t('navbar.raffle.new'), new_raffle_path if can? :create, Raffle %>
            <%= navbar_item t('navbar.raffle.index'), raffles_path %>
        <% end %>
        <%= navbar_group align: 'right' do %>
            <% if user_signed_in?  %>
                <%= navbar_text current_user.email %>
                <%= navbar_item t('navbar.logout'), destroy_user_session_path %>
            <% else %>
                <%= navbar_item t('navbar.login'), new_user_session_path %>
            <% end %>
        <% end %>
    <% end %>
<% end %>