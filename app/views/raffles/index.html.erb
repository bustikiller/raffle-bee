<%= panel_with_body title: index_model_text(Raffle) do %>

  <%= bootstrap_table do |table|
    table.headers = common_headers
    table.headers += extra_headers if @raffles.any?{|r| can_create_assignment?(r)}
    table.rows = @raffles.map do |r|
      common_values(r) + extra_values(r)
    end
  end %>

<% end %>