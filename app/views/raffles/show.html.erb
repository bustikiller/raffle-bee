<%= panel_with_body title: show_model_text(@raffle, :name) do %>
    <%= bootstrap_description @raffle,
                              name: @raffle.name,
                              starts_on: @raffle.starts_on,
                              ends_on: @raffle.ends_on,
                              price: human_price(@raffle),
                              tickets: @raffle.tickets.count
    %>

    <%= link_to t('activerecord.actions.sell_tickets'), raffle_sell_path(@raffle), class: 'btn btn-primary col-sm-offset-2' %>
    <%= link_to t('activerecord.actions.view_tickets'), raffle_tickets_path(@raffle), class: 'btn btn-primary' %>
<% end %>